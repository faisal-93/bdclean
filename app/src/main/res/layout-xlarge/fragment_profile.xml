<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nerdgeeks.bdclean.fragment.ProfileFragment"
    android:background="@drawable/ic_background">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="5dp"
            app:layout_anchor="@id/profileThumb"
            app:layout_anchorGravity="center"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="bottom"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#CDEDD8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:id="@+id/nameText"
                    android:text="Lorel Ipsum"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/membership"
                    android:text="New Member"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/dateOfMem"
                    android:gravity="center"
                    android:text="Joined 03 June 2016"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/profileThumb"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/round_bg"
            android:padding="20dp"
            android:src="@drawable/ic_profile_black"/>

    </android.support.design.widget.CoordinatorLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/bottomCardView"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#CDEDD8">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:padding="5dp"
                    android:text="GENERAL"
                    android:drawableRight="@drawable/ic_edit_large"
                    android:drawableEnd="@drawable/ic_edit_large"
                    android:textColor="#3E3D39"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:src="@drawable/ic_profile_white"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center_vertical"
                        android:text="Father's Name : Lorel Ipsum"
                        android:background="@android:color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:background="@color/colorPrimaryDark"
                        android:padding="8dp"
                        android:src="@drawable/ic_female_normal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="Mother's Name : Lore Ipsum"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:background="@android:color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:src="@drawable/ic_idcard_normal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:text="ID : BDCKHU123456"
                        android:background="@android:color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:src="@drawable/ic_location_normal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="Vill : Alam Nager, P.O : Town Khalispur"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:background="@android:color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:padding="5dp"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="P.S. : Khalispur, Dist : Khulna"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:background="@android:color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:src="@drawable/ic_referrer_normal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:text="Referrer : John Smith"
                        android:background="@android:color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:src="@drawable/ic_phone_normal"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:text="Cell : +8801XXXXXXXXX"
                        android:background="@android:color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <ImageView
                        android:background="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:src="@drawable/ic_event_white"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:text="Total Event : 13"
                        android:background="@android:color/white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


</LinearLayout>
