<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nerdgeeks.bdclean.Fragment.ProfileFragment"
    android:background="@drawable/ic_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#CEEDDD"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#91A0A1"/>

            <TextView
                android:id="@+id/tv_membership"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#91A0A1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Joined"
                    android:textSize="15sp"
                    android:textColor="#91A0A1"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"/>

                <TextView
                    android:id="@+id/tv_join_date"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:textColor="#91A0A1"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="#CEEDDD"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:id="@+id/tv_designation"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:textColor="#59635C"
                        android:textSize="30sp"
                        android:padding="2dp"
                        android:textAllCaps="true"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:layout_marginStart="95dp"
                        android:layout_marginLeft="95dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_edit"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp">
                    
                </LinearLayout>

                <ScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="340dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center"

                                android:background="#00984B"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:text="Father's name:"
                                android:textStyle="bold"
                                android:background="#ffffff"/>
                            <EditText
                                android:id="@+id/et_father"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginEnd="2dp"
                                android:inputType="text"
                                android:background="#ffffff"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center"

                                android:background="#00984B"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:text="Mother's name:"
                                android:textStyle="bold"
                                android:background="#ffffff"/>
                            <EditText
                                android:id="@+id/et_mother"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginEnd="2dp"
                                android:inputType="text"
                                android:background="#ffffff"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_id"
                                android:background="#00984B"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:text="ID:"
                                android:textStyle="bold"
                                android:background="#ffffff"/>
                            <EditText
                                android:id="@+id/et_id"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginEnd="2dp"
                                android:inputType="text"
                                android:background="#ffffff"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_address"
                                android:background="#00984B"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:text="Address:"
                                android:textStyle="bold"
                                android:background="#ffffff"/>
                            <EditText
                                android:id="@+id/et_address"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginEnd="2dp"
                                android:hint="Village-Post Office-Thana/Subdistrict-District"
                                android:inputType="text"
                                android:background="#ffffff"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_profile_white"
                                android:background="#00984B"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:text="Referer:"
                                android:textStyle="bold"
                                android:background="#ffffff"/>
                            <EditText
                                android:id="@+id/et_reference"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginEnd="2dp"
                                android:inputType="text"
                                android:background="#ffffff"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cell"
                                android:background="#00984B"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:text="Cell No:"
                                android:textStyle="bold"
                                android:background="#ffffff"/>
                            <EditText
                                android:id="@+id/et_cell"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginEnd="2dp"
                                android:inputType="text"
                                android:background="#ffffff"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_event_no"
                                android:background="#00984B"/>
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:text="No of events joined:"
                                android:textStyle="bold"
                                android:background="#ffffff"/>
                            <EditText
                                android:id="@+id/et_eventNo"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginEnd="2dp"
                                android:inputType="text"
                                android:background="#ffffff"/>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

    </LinearLayout>


</FrameLayout>
