<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    tools:context="com.nerdgeeks.bdclean.fragment.ProfileFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="#CDEDD8"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_anchor="@id/profileThumb"
            app:layout_anchorGravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Lorel Ipsum"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:id="@+id/membership"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="New Member"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <TextView
                    android:id="@+id/dateOfMem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Joined 03 June 2016"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center_horizontal"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileThumb"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_profile"
            android:background="@drawable/round_bg"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorPrimaryDark"/>

    </android.support.design.widget.CoordinatorLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/bottomCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#CDEDD8"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_edit_normal"
                android:drawableRight="@drawable/ic_edit_normal"
                android:padding="5dp"
                android:text="GENERAL"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="#3E3D39"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorPrimaryDark" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:src="@drawable/ic_profile_white" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Father's Name : Lorel Ipsum"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:padding="8dp"
                            android:src="@drawable/ic_female_normal" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Mother's Name : Lore Ipsum"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:src="@drawable/ic_idcard_normal" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="ID : BDCKHU123456"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:src="@drawable/ic_location_normal" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Vill : Alam Nager, P.O : Town Khalispur"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:padding="5dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="P.S. : Khalispur, Dist : Khulna"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:src="@drawable/ic_referrer_normal" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Referrer : John Smith"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:src="@drawable/ic_phone_normal" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Cell : +8801XXXXXXXXX"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:src="@drawable/ic_event_white" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:inputType="textCapWords"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Total Event : 13"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
