<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    tools:context="com.nerdgeeks.bdclean.fragment.TeamFragment">

    <TextView
        android:padding="5dp"
        android:background="@drawable/header_corner_bg"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Team No : 02"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center"
            android:text="Leader : Tanzia Islam Marzia"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_corner_bg">

        <LinearLayout
            android:layout_margin="5dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:text="Member ID : BDCDHK96795"
                    android:textColor="@android:color/darker_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="#444444"
                    android:text="Rezvi Alam"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                app:cpb_progress="80"
                android:layout_weight="0"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cpb_background_progressbar_color="@android:color/white"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="@color/colorPrimaryDark"
                app:cpb_progressbar_width="4dp"/>

        </LinearLayout>

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:text="Member ID : BDCDHK96795"
                    android:textColor="@android:color/darker_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#444444"
                    android:textStyle="bold"
                    android:text="Rezvi Alam"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="25%"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:padding="2dp"
                android:background="@drawable/circle_loader"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:text="Member ID : BDCDHK96795"
                    android:textColor="@android:color/darker_gray"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#444444"
                    android:textStyle="bold"
                    android:text="Rezvi Alam"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="25%"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:padding="2dp"
                android:background="@drawable/circle_loader"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>
</LinearLayout>
